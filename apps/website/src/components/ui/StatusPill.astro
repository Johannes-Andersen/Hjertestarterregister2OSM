---
import type { SyncRunStatus } from "@repo/sync-store";

interface Props {
  status: SyncRunStatus;
}

const { status } = Astro.props;
---

<span class:list={["pill", status]}>{status}</span>

<style>
.pill {
  display: inline-flex;
  padding: 0.2rem 0.5rem;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  border-radius: 999px;
}

.pill.success {
  color: #126d53;
  background: #d7f2e8;
}

.pill.failed {
  color: var(--error);
  background: #fbe2df;
}

.pill.running {
  color: var(--warning);
  background: #fdefd9;
}
</style>

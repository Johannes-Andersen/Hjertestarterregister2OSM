---
const navItems = [
  { href: "/", label: "Overview" },
  { href: "/runs", label: "Runs" },
  { href: "/issues", label: "Issues" },
  { href: "/map", label: "Map" },
];

const isActivePath = (href: string) =>
  Astro.url.pathname === href ||
  (href !== "/" && Astro.url.pathname.startsWith(`${href}/`));
---

<header class="site-header">
  <a class="brand" href="/"> <h1>Hjertestarterregister -> OSM</h1> </a>
  <nav>
    <ul>
      {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class={isActivePath(item.href) ? "active" : undefined}
            >
              {item.label}
            </a>
          </li>
        ))}
    </ul>
  </nav>
</header>

<style>
.site-header {
  position: relative;
  z-index: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  align-items: end;
  justify-content: space-between;
  padding: 1.5rem clamp(1rem, 3vw, 3rem);
}

.brand {
  color: var(--ink);
  text-decoration: none;
}

.brand h1 {
  margin: 0.2rem 0 0;
  font-size: clamp(1.4rem, 2.5vw, 2rem);
  font-weight: 700;
}

nav ul {
  display: flex;
  gap: 0.7rem;
  padding: 0;
  margin: 0;
  list-style: none;
}

nav a {
  display: inline-flex;
  padding: 0.55rem 0.9rem;
  font-weight: 600;
  color: var(--ink-subtle);
  text-decoration: none;
  border: 1px solid transparent;
  border-radius: 999px;
}

nav a:hover {
  background: rgba(255, 255, 255, 0.8);
  border-color: var(--line);
}

nav a.active {
  color: var(--ink);
  background: var(--accent-soft);
  border-color: #9bc9bb;
}
</style>

---
import type { SyncOverviewRunData } from "@repo/sync-store";
import { formatDistanceToNow } from "../../utils/formatDistanceToNow";

interface Props {
  latestSuccessfulRun: SyncOverviewRunData | null;
}

const { latestSuccessfulRun } = Astro.props;
---

<section class="hero">
  <div>
    <p class="eyebrow">Live Operational Snapshot</p>
    <h2>Registry and OSM sync health at a glance</h2>
    <p class="subtle">
      Last successful sync
      {latestSuccessfulRun?.finishedAt
          ? formatDistanceToNow(latestSuccessfulRun.finishedAt)
          : "has not completed yet"}.
    </p>
  </div>
  <a href="/runs" class="cta">View full run log</a>
</section>

<style>
.hero {
  display: flex;
  gap: 1rem;
  align-items: start;
  justify-content: space-between;
  padding: 1.2rem 1.3rem;
  margin-bottom: 1rem;
  background: var(--bg-1);
  border: 1px solid var(--line);
  border-radius: 1rem;
}

.eyebrow {
  margin: 0;
  font-size: 0.78rem;
  color: var(--ink-subtle);
  text-transform: uppercase;
  letter-spacing: 0.08em;
}

.hero h2 {
  margin: 0.4rem 0;
  font-size: clamp(1.3rem, 2.8vw, 1.9rem);
}

.subtle {
  margin: 0;
  color: var(--ink-subtle);
}

.cta {
  padding: 0.6rem 1rem;
  font-weight: 700;
  color: #fff;
  white-space: nowrap;
  text-decoration: none;
  background: var(--accent);
  border-radius: 0.8rem;
}

@media (max-width: 720px) {
  .hero {
    flex-direction: column;
  }
}
</style>

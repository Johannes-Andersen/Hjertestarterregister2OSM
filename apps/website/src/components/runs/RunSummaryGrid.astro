---
import type { SyncRunRecord } from "@repo/sync-store";
import { formatDateTime } from "../../utils/formatDateTime";
import { formatDuration } from "../../utils/formatDuration";
import { formatNumber } from "../../utils/formatNumber";
import StatusPill from "../ui/StatusPill.astro";

interface Props {
  run: SyncRunRecord;
}

const { run } = Astro.props;
---

<section class="summary-grid">
  <article>
    <h3>Status</h3>
    <p>
      <StatusPill status={run.status} />
    </p>
    <small>{run.mode}</small>
  </article>
  <article>
    <h3>Started</h3>
    <p>{formatDateTime(run.startedAt)}</p>
    <small>Duration: {formatDuration(run.startedAt, run.finishedAt)}</small>
  </article>
  <article>
    <h3>Finished</h3>
    <p>{formatDateTime(run.finishedAt)}</p>
    <small>{run.errorMessage ? `Error: ${run.errorMessage}` : "Completed"}</small>
  </article>
  <article>
    <h3>Linked AEDs</h3>
    <p>{formatNumber(run.linkedAeds)}</p>
    <small>Matched in this run</small>
  </article>
</section>

<style>
  .summary-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 0.8rem;
    margin-bottom: 1rem;
  }

  .summary-grid article {
    border: 1px solid var(--line);
    border-radius: 1rem;
    padding: 0.9rem;
    background: rgba(255, 255, 255, 0.84);
  }

  .summary-grid h3 {
    margin: 0;
    font-size: 0.85rem;
    color: var(--ink-subtle);
  }

  .summary-grid p {
    margin: 0.45rem 0;
    font-size: 1rem;
    font-weight: 600;
  }

  .summary-grid small {
    color: var(--ink-subtle);
  }

  @media (max-width: 980px) {
    .summary-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (max-width: 620px) {
    .summary-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

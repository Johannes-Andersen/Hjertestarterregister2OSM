---
import { getSyncRunById, listSyncRunIssues } from "@repo/sync-store";
import Layout from "../../layouts/Layout.astro";
import { issueTypeLabels } from "../../utils/constants";
import { formatDateTime } from "../../utils/formatDateTime";
import { formatDuration } from "../../utils/formatDuration";
import { formatNumber } from "../../utils/formatNumber";

export const prerender = false;

const runId = Astro.params.id;

if (!runId) {
  Astro.response.status = 400;
}

const [run, issues] = runId
  ? await Promise.all([
      getSyncRunById(runId),
      listSyncRunIssues({ runId, limit: 400 }),
    ])
  : [null, []];

if (!run) {
  Astro.response.status = 404;
}
---

<Layout title={`Run ${runId ?? "unknown"} | Hjertestarterregister2OSM`}>
  {
    run ? (
      <>
        <section class="summary-grid">
          <article>
            <h3>Status</h3>
            <p>
              <span class={`pill ${run.status}`}>{run.status}</span>
            </p>
            <small>{run.mode}</small>
          </article>
          <article>
            <h3>Started</h3>
            <p>{formatDateTime(run.startedAt)}</p>
            <small>
              Duration: {formatDuration(run.startedAt, run.finishedAt)}
            </small>
          </article>
          <article>
            <h3>Finished</h3>
            <p>{formatDateTime(run.finishedAt)}</p>
            <small>
              {run.errorMessage ? `Error: ${run.errorMessage}` : "Completed"}
            </small>
          </article>
          <article>
            <h3>Linked AEDs</h3>
            <p>{formatNumber(run.linkedAeds)}</p>
            <small>Matched in this run</small>
          </article>
        </section>

        <section class="panel">
          <h3>Outcomes</h3>
          <dl>
            <div>
              <dt>Updated</dt>
              <dd>{formatNumber(run.updated)}</dd>
            </div>
            <div>
              <dt>Created</dt>
              <dd>{formatNumber(run.created)}</dd>
            </div>
            <div>
              <dt>Deleted</dt>
              <dd>{formatNumber(run.deleted)}</dd>
            </div>
            <div>
              <dt>Skipped create nearby</dt>
              <dd>{formatNumber(run.skippedCreateNearby)}</dd>
            </div>
            <div>
              <dt>Skipped delete non-AED</dt>
              <dd>{formatNumber(run.skippedDeleteNotAedOnly)}</dd>
            </div>
            <div>
              <dt>Unchanged</dt>
              <dd>{formatNumber(run.unchanged)}</dd>
            </div>
          </dl>
        </section>

        <section class="panel">
          <header>
            <h3>Issues in this run</h3>
            <a href="/issues">Current issue dashboard</a>
          </header>
          {issues.length ? (
            <table>
              <thead>
                <tr>
                  <th>Type</th>
                  <th>Severity</th>
                  <th>Message</th>
                  <th>OSM</th>
                </tr>
              </thead>
              <tbody>
                {issues.map((issue) => (
                  <tr>
                    <td>
                      {issueTypeLabels[issue.issueType] ?? issue.issueType}
                    </td>
                    <td>{issue.severity}</td>
                    <td>{issue.message}</td>
                    <td>
                      {issue.osmNodeId ? (
                        <a
                          href={`https://www.openstreetmap.org/node/${issue.osmNodeId}`}
                          target="_blank"
                          rel="noreferrer"
                        >
                          Node {issue.osmNodeId}
                        </a>
                      ) : (
                        "-"
                      )}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          ) : (
            <p class="empty">No issues were recorded for this run.</p>
          )}
        </section>
      </>
    ) : (
      <section class="panel">
        <h2>Run not found</h2>
        <p>The requested run ID does not exist.</p>
      </section>
    )
  }
</Layout>

<style>
  .summary-grid {
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 0.8rem;
    margin-bottom: 1rem;
  }

  .summary-grid article {
    border: 1px solid var(--line);
    border-radius: 1rem;
    padding: 0.9rem;
    background: rgba(255, 255, 255, 0.84);
  }

  .summary-grid h3 {
    margin: 0;
    font-size: 0.85rem;
    color: var(--ink-subtle);
  }

  .summary-grid p {
    margin: 0.45rem 0;
    font-size: 1rem;
    font-weight: 600;
  }

  .summary-grid small {
    color: var(--ink-subtle);
  }

  .panel {
    border: 1px solid var(--line);
    border-radius: 1rem;
    background: rgba(255, 255, 255, 0.92);
    padding: 1rem;
    margin-bottom: 1rem;
  }

  .panel h3 {
    margin-top: 0;
  }

  .panel header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.65rem;
  }

  .panel dl {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 0.7rem;
    margin: 0;
  }

  .panel dl div {
    border: 1px solid #dbe3df;
    border-radius: 0.7rem;
    padding: 0.7rem;
  }

  dt {
    color: var(--ink-subtle);
    font-size: 0.84rem;
  }

  dd {
    margin: 0.3rem 0 0;
    font-size: 1.2rem;
    font-weight: 700;
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  th,
  td {
    text-align: left;
    border-bottom: 1px solid #dbe3df;
    padding: 0.6rem;
    font-size: 0.9rem;
  }

  .pill {
    display: inline-flex;
    padding: 0.2rem 0.5rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .pill.success {
    background: #d7f2e8;
    color: #126d53;
  }

  .pill.failed {
    background: #fbe2df;
    color: var(--error);
  }

  .pill.running {
    background: #fdefd9;
    color: var(--warning);
  }

  .empty {
    margin: 0;
    color: var(--ink-subtle);
  }

  @media (max-width: 980px) {
    .summary-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .panel dl {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }

    .panel {
      overflow-x: auto;
    }
  }

  @media (max-width: 620px) {
    .summary-grid {
      grid-template-columns: 1fr;
    }

    .panel dl {
      grid-template-columns: 1fr;
    }
  }
</style>
